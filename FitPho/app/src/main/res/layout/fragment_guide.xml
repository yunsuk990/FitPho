<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darklogocolor"
    tools:context=".GuideFragment">

    <LinearLayout
        android:id="@+id/top1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/star" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2.5dp"
            android:fontFamily="@font/myungbold"
            android:text="즐겨찾기"
            android:textColor="@color/white"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/chest"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@color/white"
        android:src="@drawable/camera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top1"/>

    <TextView
        android:id="@+id/chest_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/myungbold"
        android:text="가슴"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/back"
        app:layout_constraintTop_toBottomOf="@+id/chest"
        tools:layout_editor_absoluteX="51dp" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@color/white"
        android:src="@drawable/camera"
        app:layout_constraintBottom_toTopOf="@+id/back_txt"

        app:layout_constraintTop_toBottomOf="@+id/chest_txt" />

    <TextView
        android:id="@+id/back_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/myungbold"
        android:text="등"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/legs"
        app:layout_constraintTop_toBottomOf="@+id/back"
        tools:layout_editor_absoluteX="63dp" />

    <ImageView
        android:id="@+id/legs"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@color/white"
        android:src="@drawable/camera"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="455dp" />

    <TextView
        android:id="@+id/legs_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/myungbold"
        android:text="하체"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/legs"
        app:layout_constraintVertical_bias="0.431"
        tools:layout_editor_absoluteX="63dp" />

</androidx.constraintlayout.widget.ConstraintLayout>