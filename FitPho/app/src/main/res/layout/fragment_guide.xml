<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darklogocolor"
    tools:context=".Guide.GuideFragment">

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/bookmark"
                android:layout_width="65dp"
                android:layout_height="43dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@drawable/bookmark_white" />

            <Button
                android:id="@+id/chest"
                android:layout_width="65dp"
                android:layout_height="43dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_round"
                android:fontFamily="@font/myungbold"
                android:text="가슴"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/arm"
                android:layout_width="65dp"
                android:layout_height="43dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_round"
                android:fontFamily="@font/myungbold"
                android:text="팔"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/back"
                android:layout_width="65dp"
                android:layout_height="43dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_round"
                android:fontFamily="@font/myungbold"
                android:text="등"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/leg"
                android:layout_width="65dp"
                android:layout_height="43dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_round"
                android:fontFamily="@font/myungbold"
                android:text="하체"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/shoulder"
                android:layout_width="65dp"
                android:layout_height="43dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_round"
                android:fontFamily="@font/myungbold"
                android:text="어깨"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/extra"
                android:layout_width="65dp"
                android:layout_height="43dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_round"
                android:fontFamily="@font/myungbold"
                android:text="기타"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ex_list"
        android:layout_width="match_parent"
        android:layout_height="650dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
        tools:listitem="@layout/exlist_item"></androidx.recyclerview.widget.RecyclerView>
</androidx.constraintlayout.widget.ConstraintLayout>