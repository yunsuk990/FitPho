<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Calendar.CalenderFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        app:titleTextColor="@color/white"
        android:gravity="center"
        app:title=" "
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/barcolor">

        <TextView
            android:layout_width="wrap_content"
            android:text="캘린더"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_height="wrap_content"/>
    </androidx.appcompat.widget.Toolbar>

    <include
        android:id="@+id/legendLayout"
        layout="@layout/calender_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <com.kizitonwose.calendarview.CalendarView
        android:id="@+id/exTwoCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cv_dayViewResource="@layout/item"
        app:cv_monthHeaderResource="@layout/calender_header"
        app:cv_orientation="horizontal"
        app:cv_scrollMode="paged"
        android:layout_marginBottom="50dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/darklogocolor"
            android:background="@drawable/button_round"
            android:gravity="center"
            android:text="운동 계획하기"
            android:layout_weight="1"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:textColor="@color/white" />
    </LinearLayout>


</LinearLayout>