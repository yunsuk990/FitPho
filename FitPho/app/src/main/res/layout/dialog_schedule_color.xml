<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="30dp"
    android:paddingTop="44dp"
    android:paddingBottom="25dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSeetBehavor">

    <TextView
        android:id="@+id/color_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="색상 선택"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/red"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/red"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/color_choose"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/orange"/>

    <ImageView
        android:id="@+id/orange"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round"
        android:backgroundTint="#FF9800"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/color_choose"
        app:layout_constraintStart_toEndOf="@id/red"
        app:layout_constraintEnd_toStartOf="@+id/yellow"/>
    <ImageView
        android:id="@+id/yellow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round"
        android:backgroundTint="#FFEB3B"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/color_choose"
        app:layout_constraintStart_toEndOf="@id/orange"
        app:layout_constraintEnd_toStartOf="@+id/green"/>
    <ImageView
        android:id="@+id/green"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round"
        android:backgroundTint="#5FC363"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/color_choose"
        app:layout_constraintStart_toEndOf="@id/yellow"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/blue"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/blue"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/red"
        app:layout_constraintStart_toStartOf="@id/red" />

    <ImageView
        android:id="@+id/indigo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round"
        android:backgroundTint="#3F51B5"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/orange"
        app:layout_constraintStart_toStartOf="@id/orange" />

    <ImageView
        android:id="@+id/purple1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round"
        android:backgroundTint="#673AB7"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/yellow"
        app:layout_constraintStart_toStartOf="@id/yellow" />

    <ImageView
        android:id="@+id/purple2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round"
        android:backgroundTint="#9C27B0"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/green"
        app:layout_constraintStart_toStartOf="@id/green" />

</androidx.constraintlayout.widget.ConstraintLayout>