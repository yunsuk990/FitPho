<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:xmln="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darklogocolor"
    tools:context=".Login.WelcomeFragment">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_marginTop="208dp"
        android:src="@drawable/img_logo"
        xmln:layout_constraintEnd_toEndOf="parent"
        xmln:layout_constraintStart_toStartOf="parent"
        xmln:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="FitPho에 오신걸 환영합니다."
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        xmln:layout_constraintEnd_toEndOf="parent"
        xmln:layout_constraintStart_toStartOf="parent"
        xmln:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/email_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_round"
        android:text="이메일로 가입하기"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        xmln:layout_constraintEnd_toEndOf="@+id/textView6"
        xmln:layout_constraintHorizontal_bias="0.0"
        xmln:layout_constraintStart_toStartOf="@+id/textView6"
        xmln:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="105dp"
        android:text="로그인"

        android:textColor="@color/red"
        xmln:layout_constraintBottom_toBottomOf="@+id/textView7"
        xmln:layout_constraintEnd_toEndOf="parent"
        xmln:layout_constraintStart_toEndOf="@+id/textView7"
        xmln:layout_constraintTop_toTopOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:text="이미 회원이신가요?"
        android:textColor="#FFFFFF"
        xmln:layout_constraintBottom_toBottomOf="parent"
        xmln:layout_constraintStart_toStartOf="parent"
        xmln:layout_constraintTop_toBottomOf="@+id/email_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>